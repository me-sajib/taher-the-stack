{
  "name": "software-sheba",
  "private": true,
  "sourceType": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run dev",
    "dev:api": "yarn lerna run dev --scope=@software-sheba/api",
    "dev:dashboard": "yarn lerna run dev --scope=@software-sheba/dashboard",
    "dev:proxy-manager-extension": "yarn lerna run dev --scope=@software-sheba/proxy-manager-extension",
    "dev:proxy-rotator": "yarn lerna run dev --scope=@software-sheba/proxy-rotator",
    "dev:scraper-api": "yarn lerna run dev --scope=@software-sheba/scraper-api",
    "dev:web-scraper-extension": "yarn lerna run dev --scope=@software-sheba/web-scraper-extension",
    "dev:website": "yarn lerna run start --scope=@software-sheba/website",
    "build": "lerna run build",
    "build:api": "yarn lerna run build --scope=@software-sheba/api",
    "build:dashboard": "yarn lerna run build--scope=@software-sheba/dashboard",
    "build:proxy-manager-extension": "yarn lerna run build --scope=@software-sheba/proxy-manager-extension",
    "build:proxy-rotator": "yarn lerna run build --scope=@software-sheba/proxy-rotator",
    "build:scraper-api": "yarn lerna run build--scope=@software-sheba/scraper-api",
    "build:web-scraper-extension": "yarn lerna run build--scope=@software-sheba/web-scraper-extension",
    "build:website": "yarn lerna run build --scope=@software-sheba/website",
    "seed": "prisma db seed",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "prisma": {
    "seed": "jiti prisma/seed.ts"
  },
  "lint-staged": {
    "./packages/api/src/**/**/*.ts": [
      "prettier --write .",
      "eslint . --ext .ts,.tsx"
    ],
    "./packages/dashboard/**/**/*.{ts,tsx}": [
      "prettier --write .",
      "eslint . --ext .ts,.tsx"
    ],
    "./packages/proxy-manager-extension/src/**/*.{ts,tsx}": [
      "prettier --write .",
      "eslint . --ext .ts,.tsx"
    ],
    "./packages/proxy-rotator/src/**/*.ts": [
      "prettier --write .",
      "eslint . --ext .ts,.tsx"
    ],
    "./packages/scraper-api/**/*.{ts,tsx}": [
      "prettier --write .",
      "eslint . --ext .ts,.tsx"
    ],
    "./packages/web-scraper-extension/src/**/*.{ts,tsx}": [
      "prettier --write .",
      "eslint . --ext .ts,.tsx"
    ],
    "./packages/website/**/*.{js,jsx}": [
      "prettier --write .",
      "eslint . --ext .ts,.tsx"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "4.17.13",
    "@types/node": "16.11.7",
    "@types/passport-http": "^0.3.9",
    "@types/passport-jwt": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "autoprefixer": "^10.4.13",
    "babel-jest": "28.1.1",
    "cross-env": "^7.0.3",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "^8.0.2",
    "jest-environment-jsdom": "28.1.1",
    "jiti": "^1.16.0",
    "lerna": "^6.1.0",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.19",
    "prettier": "^2.6.2",
    "prisma": "^4.2.1",
    "react-test-renderer": "18.2.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "27.1.4",
    "typescript": "~4.7.2"
  }
}
