{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "CommonJS",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "lib": ["es2017", "dom"],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["node"],
    "paths": {
      "@software-sheba/*": [
        "packages/*/src"
      ],
      "@software-sheba/api/src/*": [
        "packages/api/src"
      ],
      "@software-sheba/dashboard/src/*": [
        "packages/dashboard/src"
      ],
      "@software-sheba/proxy-manager-extension/src/*": [
        "packages/proxy-manager-extension/src"
      ],
      "@software-sheba/proxy-rotator/src/*": [
        "packages/proxy-rotator/src"
      ],
      "@software-sheba/scraper-api/src/*": [
        "packages/scraper-api/src"
      ],
      "@software-sheba/web-scraper-extension/src/*": [
        "packages/web-scraper-extension/src"
      ],
      "@software-sheba/website/src/*": [
        "packages/website/src"
      ]
    }
  },
  "include": ["packages/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
